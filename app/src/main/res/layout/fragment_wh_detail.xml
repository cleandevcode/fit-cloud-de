    <com.google.android.material.appbar.MaterialToolbar android:id="@+id/toolbar" app:title="@string/wh_settings" style="@style/Widget.FitCloudPro.Toolbar"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="36dp">
                <TextView android:id="@+id/tv_goto_today" android:padding="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wh_goto_today" android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
