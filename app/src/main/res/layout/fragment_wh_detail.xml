            <com.github.kilnn.tool.widget.item.PreferenceItem android:id="@+id/item_pregnancy_due_date" app:preferenceSummary=" " app:preferenceTitle="@string/wh_set_due_date" app:preferenceTitleDrawableStart="@drawable/ic_wh_set_due_date" app:showPreferenceSummary="true" style="@style/Widget.FitCloudPro.PreferenceView.Item.Text"/>
            <com.github.kilnn.tool.widget.item.PreferenceItem android:id="@+id/item_begin_operation" android:visibility="gone" app:preferenceTitle="@string/wh_menstruation_start" app:preferenceTitleDrawableStart="@drawable/ic_wh_set_menstruation_start_end" style="@style/Widget.FitCloudPro.PreferenceView.Item.Switch"/>
