                <TextView android:id="@+id/tv_legend_menstruation2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wh_menstruation_remind_safe" android:drawablePadding="4dp" app:drawableStartCompat="@drawable/ic_wh_legend_safe"/>
