<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_gravity="center_horizontal" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginTop="12dp" android:src="@drawable/ic_google_fit"/>
    <TextView android:gravity="center" android:id="@+id/tv_tips1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/google_fit_function_tips" android:paddingStart="8dp" android:paddingEnd="8dp" style="@style/TextAppearance.AppCompat.Subhead"/>
    <TextView android:gravity="center" android:id="@+id/tv_tips2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/google_fit_connect_tips" android:paddingStart="8dp" android:paddingEnd="8dp" style="@style/TextAppearance.AppCompat.Subhead"/>
    <FrameLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="12dp">
        <Button android:gravity="center" android:layout_gravity="center" android:id="@+id/btn_action" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAllCaps="false" style="?attr/buttonBarPositiveButtonStyle"/>
        <ProgressBar android:layout_gravity="center" android:id="@+id/progress_bar" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </FrameLayout>
</LinearLayout>
