                <TextView android:textColor="?android:attr/textColorSecondary" android:id="@+id/tv_heart_rate_value2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                <View android:id="@+id/heart_rate_view3" android:background="@color/sport_heart_rate_aerobic" android:layout_width="18dp" android:layout_height="18dp" android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
                <TextView android:textColor="?android:attr/textColorSecondary" android:id="@+id/tv_heart_rate_text3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sport_heart_rate_aerobic" android:layout_centerVertical="true" android:layout_marginStart="4dp" android:layout_marginEnd="4dp" android:layout_toStartOf="@+id/tv_heart_rate_value3" android:layout_toEndOf="@+id/heart_rate_view3" android:layout_alignParentEnd="true"/>
